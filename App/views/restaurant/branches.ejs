<!DOCTYPE html>
<html>
    <head>
        <!-- Header inclusion-->
        <%- include ../template/header.ejs %>
    </head>
    <body class="bg">
        <%- include ../template/navbar.ejs %>
        <br \>
        <h1 class="hd" style="font-size: 3em;" ><%= title %></h1>
        <br \>
        <% for(var i =0; i<data.length; i++) { %>
            <div class="card">
                <div class="card-body">
                    <div class="d-flex flex-row">
                        <div class="d-flex flex-column">
                            <h5 class="card-title" style="font-weight: bold; font-size: 25px;" id="card-header"><%= data[i].location%></h5>
                            <h6 class="card-subtitle mb-2 text-muted"><%= data[i].address%></h6>
                            <p class="card-text"><%= data[i].pnumber%></p>
                        </div>
                        <div class="align-self-center ml-auto">
                            <a href="/reservation?name=<%= data[i].name%>&address=<%= data[i].address%>" class="btn btn-primary">Make a reservation</a>
                            <!--<button class="btn btn-success my-2 my-sm-0 mx-2" data-toggle="modal" data-target="#reservationModal">Make a reservation <span class="sr-only"></span>-->
                        </div>            
                    </div>
                </div>
            </div>
            <br \>
        <%} %>
    </body>
</html>