<!DOCTYPE html>
<html>
    <head>
        <!-- Header inclusion-->
        <%- include ../template/header.ejs %>
    </head>

    <body class="bg">

        <%- include ../template/navbar.ejs %>


        <br \>
        <h1 class="hd" style="font-size: 3em;" ><%= title %></h1>

        <div class="dropdown">

            <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Reward Types
             <span class="caret"></span></button>

             <ul class="dropdown-menu">
                <li><a href="/incentive">All</a></li>
                <div class="dropdown-divider"></div>
                <li><a href="/incentive/discount">Discounts</a></li>
                <div class="dropdown-divider"></div>
                <li><a href="/incentive/prize">Prizes</a></li>
            </ul>

        </div>

        <br \>

        <% for(var i =0; i<data.length; i++) { %>

            <form
                action="/incentive/redeem"
                method="post"
            >
                <input
                    type="hidden"
                    id="iid"
                    name="iid"
                    value="<%= data[i].iid%>"
                />

                <div class="card">

                    <div class="card-header">
                        <h5 class="card-title"><%= data[i].incentivename%></h5>
                    </div>

                    <div class="card-body">

                        <div class="d-flex justify-content-between">
                            <h6 class="card-title"><%= data[i].description%></h6>
                        <button type="submit" class="btn btn-primary">Redeem!</button>
                        </div>

                    <h6 class="card-subtitle mb-2 text-muted"><%= data[i].redeempts%> points</h6>

                    </div>
                </div>
            </form>

        <br \>
        <%} %>

    </body>
</html>
